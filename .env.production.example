# Production Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=massweb
DB_PASSWORD=your_secure_database_password
DB_DATABASE=massweb

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars-make-it-strong
JWT_EXPIRES_IN=7d

# Super Admin Configuration
SUPERADMIN_EMAIL=admin@yourdomain.com
SUPERADMIN_PASSWORD=YourSecurePassword123!

# Application Settings
ALLOW_SIGNUP=true
CORS_ORIGIN=https://yourdomain.com

# S3 Storage (Contabo Object Storage)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_contabo_access_key
AWS_SECRET_ACCESS_KEY=your_contabo_secret_key
AWS_S3_BUCKET_NAME=massweb-uploads
AWS_S3_ENDPOINT=https://sin1.contabostorage.com
AWS_S3_PUBLIC_URL_PREFIX=https://sin1.contabostorage.com/PROJECT_ID:massweb-uploads

# Frontend API URL
VITE_API_URL=https://api.yourdomain.com/api
